<script>
const reels = [
 "https://www.facebook.com/reel/1886642061988879",
 "https://www.facebook.com/reel/1118990136683189",
 "https://www.facebook.com/reel/1134836045394006",
 "https://www.facebook.com/reel/338489818552954"
];

const reelsBox = document.getElementById("reels");
reels.forEach(link=>{
  reelsBox.innerHTML += `
  <div class="post">
    <b>Coding Reel</b>
    <div class="video-wrap">
      <div class="fb-video" data-href="${link}" data-width="500"></div>
      <div class="actions">
        <button onclick="like(this)">üëç</button>
        <button onclick="toggleComment(this)">üí¨</button>
        <button onclick="share('${link}')">üîó</button>
      </div>
    </div>
    <div class="comment-box">
      <input placeholder="Write comment & press Enter" onkeydown="addComment(event,this)">
    </div>
  </div>`;
});

setTimeout(()=>{ if(window.FB) FB.XFBML.parse(); },1000);

function show(id){
  document.querySelectorAll(".section").forEach(s=>s.style.display="none");
  document.getElementById(id).style.display="block";
  if(id==="reels" && window.FB) FB.XFBML.parse();
}

function openLogin(){ loginModal.style.display="flex"; }
function closeLogin(){ loginModal.style.display="none"; }

function like(btn){ btn.innerText = btn.innerText==="üëç"?"‚ù§Ô∏è":"üëç"; }
function toggleComment(btn){
  let box = btn.closest(".post").querySelector(".comment-box");
  box.style.display = box.style.display==="block"?"none":"block";
}
function addComment(e,input){
  if(e.key==="Enter"){ alert("Comment: "+input.value); input.value=""; }
}
function share(link){
  navigator.clipboard.writeText(link);
  alert("Reel link copied");
}
function follow(btn){
  btn.innerText = btn.innerText==="Follow"?"Following":"Follow";
}
</script>

